<MudCard Class="inline-flex flex-col w-1/2">
	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.h6">Startup Profiles</MudText>
		</CardHeaderContent>
	</MudCardHeader>
	<MudCardContent Class="flex gap-1">
		<MudSelect Class="mt-0" T="Model.StartupProfileOption" @bind-Value="_selectedOption" Label="Startup Profile" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
			@foreach(var startupProfileOption in _model.StartupProfileOptions)
			{
				<MudSelectItem Value="@startupProfileOption">@startupProfileOption.Name</MudSelectItem>
			}
		</MudSelect>
		<MudTooltip Delay="600" Text="Launch Profile Apps" Placement="Placement.Top">
			<MudIconButton
				Class="h-14"
				Icon="@Icons.Material.Filled.PlayArrow"
				Variant="Variant.Filled"
				Size="Size.Large"
				Color="Color.Primary"
				OnClick="(() => LaunchProfileApps())"
				aria-label="launch profile apps" />
		</MudTooltip>
	</MudCardContent>
</MudCard>
