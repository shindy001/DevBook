<MudDialog DefaultFocus="DefaultFocus.LastChild">
	<DialogContent>
		<MudText Typo="Typo.body1">@ErrorMessage</MudText>
	</DialogContent>
	<DialogActions>
		<MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Ok</MudButton>
	</DialogActions>
</MudDialog>
@code {
	[CascadingParameter] private MudDialogInstance MudDialog { get; set; } = default!;
	[Parameter] public string? ErrorMessage { get; set; } = "Uh oh. Something went wrong.";

	void Submit() => MudDialog.Close();
}
