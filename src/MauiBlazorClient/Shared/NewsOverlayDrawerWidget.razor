<MudDrawer @bind-Open="@_open" Elevation="1" Anchor="@Anchor" Width="@Width" Variant="@DrawerVariant.Temporary">
	<MudDrawerHeader>
		<MudText Typo="Typo.h6">Hacker News</MudText>
	</MudDrawerHeader>
	<MudDrawerContainer>
		<MudList Dense="true">
			<MudListItem>
				<ChildContent>
					<MudLink Href="https://news.ycombinator.com/newest">1. I Fought The PayPal And I Won</MudLink>
				</ChildContent>
			</MudListItem>
			<MudListItem>
				<ChildContent>
					<MudLink Href="https://news.ycombinator.com/newest">2. Many Companies Aren’t Prepared to Replace Underperforming CEOs</MudLink>
				</ChildContent>
			</MudListItem>
			<MudListItem>
				<ChildContent>
					<MudLink Href="https://news.ycombinator.com/newest">3. In defense of linked lists</MudLink>
				</ChildContent>
			</MudListItem>
		</MudList>
	</MudDrawerContainer>
</MudDrawer>

@code {
	[Parameter] public Anchor Anchor { get; set; } = Anchor.End;
	[Parameter] public string Width { get; set; } = "50%";

	private bool _open;

	public void Open()
	{
		_open = true;
		StateHasChanged();
	}
}
